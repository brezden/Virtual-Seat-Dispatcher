datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  picture  String?   @db.MediumText
  bookings Booking[] 
}

model Booking {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  startDate DateTime
  endDate   DateTime?
  allDay    Boolean?
  location Int
  guests    Boolean
  @@index([userId])
}
